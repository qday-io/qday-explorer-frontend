# Set of ENVs for QDay Testnet explorer
# https://explorer.qday.info

# Local ENVs
NEXT_PUBLIC_APP_PROTOCOL=http
NEXT_PUBLIC_APP_HOST=localhost
NEXT_PUBLIC_APP_PORT=3000
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_API_WEBSOCKET_PROTOCOL=ws

# Instance ENVs
NEXT_PUBLIC_API_BASE_PATH=/
NEXT_PUBLIC_API_HOST=explorer.qday.info
NEXT_PUBLIC_API_PROTOCOL=https

# Network configuration
NEXT_PUBLIC_NETWORK_NAME=QDay Testnet
NEXT_PUBLIC_NETWORK_SHORT_NAME=QDay Testnet
NEXT_PUBLIC_NETWORK_ID=44003
NEXT_PUBLIC_NETWORK_RPC_URL=https://rpc.qday.info
NEXT_PUBLIC_NETWORK_CURRENCY_NAME=QDay Token (Testnet)
NEXT_PUBLIC_NETWORK_CURRENCY_SYMBOL=QDAY
NEXT_PUBLIC_NETWORK_CURRENCY_DECIMALS=18
NEXT_PUBLIC_NETWORK_VERIFICATION_TYPE=validation

# Stats and visualization
# Stats service not deployed - commenting out to avoid 400 errors
# NEXT_PUBLIC_STATS_API_HOST=https://explorer.qday.info
# NEXT_PUBLIC_VISUALIZE_API_HOST=https://explorer.qday.info

# UI configuration
NEXT_PUBLIC_HOMEPAGE_CHARTS=['daily_txs']
NEXT_PUBLIC_AD_BANNER_PROVIDER=none
NEXT_PUBLIC_NAVIGATION_LAYOUT=horizontal
NEXT_PUBLIC_COLOR_THEME_DEFAULT=dark

# Branding
NEXT_PUBLIC_NETWORK_LOGO=file://./public/static/logos/qday-logo-horizontal-blue.png
NEXT_PUBLIC_NETWORK_ICON=file://./public/static/logos/qday-logo-horizontal-blue.png
NEXT_PUBLIC_OG_DESCRIPTION=QDay Testnet Explorer is a comprehensive blockchain explorer for the QDay test network. Explore blocks, transactions, addresses, tokens, and network statistics in real-time.
NEXT_PUBLIC_PROMOTE_BLOCKSCOUT_IN_TITLE=false

# API spec
NEXT_PUBLIC_API_SPEC_URL=https://raw.githubusercontent.com/blockscout/blockscout-api-v2-swagger/main/swagger.yaml

# Testnet flag
NEXT_PUBLIC_IS_TESTNET=true
